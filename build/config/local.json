{
    "build_in": "github",
    "clear_build_path": true,
    "next":
    [
        {
            "build": "docker",
            "config":
            {
                "base_image": "alpine",
                "image_name": "eons/base.img",
                "image_os": "alpine",
                "install":
                [
                    "bash",
                    "supervisor",
                    "python3",
                    "python3-dev",
                    "py3-pip",
                    "build-base"
                ],
                "also" : [
                    "RUN mkdir /launch.d; mkdir -p /var/log/supervisor",
                    "COPY launch /launch",
                    "RUN chmod +x /launch",
                    "RUN pip install wheel; pip install emi",
                    "RUN apk del build-base py3-pip python3-dev"
                ],
                "entrypoint" : "/launch",
                "tags" : [
                    "latest"
                ]
            }
        }
    ]
}