{
  "name": "base",
  "type": "img",
  "image_name": "eons/base.img",
  "clear_build_path" : true,
  "build_in" : "tmp",
  "next": [
    {
      "run_when_none" : [
        "github"
      ],
      "build" : "proxy",
      "build_in" : "local",
      "copy" : [
        {"/inc/" : "local/"}
      ],
      "config" : {
        "clear_build_path" : false,
        "proxy" : "../config/local.json"
      }
    },
    {
      "run_when_any" : [
        "github"
      ],
      "build" : "proxy",
      "build_in" : "github",
      "copy" : [
        {"/inc/" : "github/local"}
      ],
      "config" : {
        "clear_build_path" : false,
        "proxy" : "../config/github.json"
      }
    }
  ]
}
